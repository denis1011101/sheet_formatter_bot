# Токен Telegram-бота (получать у @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ID Google-таблицы (берется из URL таблицы)
GOOGLE_SHEET_ID=your_google_spreadsheet_id_here

# Путь к файлу учетных данных сервисного аккаунта Google
GOOGLE_CREDENTIALS_PATH=./credentials.json

# Название листа в Google-таблице (по умолчанию "Лист1")
DEFAULT_SHEET_NAME=Лист1

# За сколько часов до тенниса отправлять уведомление
NOTIFICATION_HOURS_BEFORE=8

# Время начала тенниса (по умолчанию 22:00)
TENNIS_DEFAULT_TIME=22:00

# Интервал проверки для уведомлений в секундах (15 минут = 900 секунд)
NOTIFICATION_CHECK_INTERVAL=900