# Токен Telegram-бота (получать у @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ID Google-таблицы (берется из URL таблицы)
GOOGLE_SHEET_ID=your_google_spreadsheet_id_here

# Путь к файлу учетных данных сервисного аккаунта Google
GOOGLE_CREDENTIALS_PATH=./credentials.json

# Название листа в Google-таблице (по умолчанию "Лист1")
DEFAULT_SHEET_NAME=Лист1

# Час дневного уведомления в личные чаты (12)
PERSONAL_MORNING_NOTIFICATION_HOUR=12

# Час вечернего уведомления в личные чаты (18)
PERSONAL_EVENING_NOTIFICATION_HOUR=18

# Час дневного уведомления в общий чат (13)
GROUP_MORNING_NOTIFICATION_HOUR=13

# Час вечернего уведомления в общий чат (19)
GROUP_EVENING_NOTIFICATION_HOUR=19

# Час отправки финального напоминания перед игрой (20 = в 20:00, пустое значение или 0 - не отправлять)
FINAL_REMINDER_NOTIFICATION_HOUR=20

# День недели для напоминания админу (0=воскресенье, 1=понедельник, ..., 5=пятница, 6=суббота)
ADMIN_REMINDER_WDAY=5

# Час отправки напоминания админу (например, 12 = 12:00)
ADMIN_REMINDER_HOUR=12

# Интервал проверки для уведомлений в секундах (15 минут = 900 секунд)
NOTIFICATION_CHECK_INTERVAL=900

# Время начала тенниса (по умолчанию 22:00)
TENNIS_DEFAULT_TIME=22:00

# Часовой пояс для уведомлений (по умолчанию Екатеринбург)
TIMEZONE=Asia/Yekaterinburg

# ID администраторов бота через запятую (например: 123456,789012)
ADMIN_TELEGRAM_IDS=

# ID общего чата для уведомлений
GENERAL_CHAT_ID=
